        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".SaveExpense">
        </activity>
        <activity android:name=".SaveExpenseFragment">
        </activity>
        <activity android:name=".ExpenseList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ExpenseListFragment">
        </activity>
        <activity
            android:name=".ExpenseDetail"
            android:label="@string/title_activity_expense_detail">
        </activity>
    </application>

</manifest>